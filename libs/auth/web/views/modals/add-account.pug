form(action='/signup' method='post')#modal-account-form
    #myModalAdd.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Add Account
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    .form-group
                        input.form-control(type='text' name='username' placeholder='Username' required='')
                    .form-group
                        input.form-control(type='text' name='email' placeholder='Email' required='')
                    .form-group
                        input.form-control(type='text' name='name' placeholder='Name' required='')
                    .form-group
                        input.form-control(type='password' name='password' placeholder='Password' required='')
                    .form-check
                        input.form-check-input#defaultCheck1(type='checkbox' name='checkbox' value='true')
                        label.form-check-label(for='defaultCheck1') As admin
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Save